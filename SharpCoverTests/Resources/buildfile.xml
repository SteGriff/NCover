				<include name="SharpCover-report.html" />
				<include name="SharpCover.css" />
				<include name="SharpCover.gif" />
			</fileset>
		</copy>

		<!- Deinstrument the code >
		<sharpuncover reportName="SharpCover" reportDir="${builddir}" /> 
    </target>
